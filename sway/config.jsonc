[
  {
    "position": "top",
    "output": "DP-1",
    "modules-left": ["sway/workspaces", "sway/mode", "sway/scratchpad"],
    "modules-center": ["sway/window"],
    "modules-right": [
      "custom/music",
      "idle_inhibitor",
      "custom/privacy",
      "custom/keyboardlayout",
      "tray",
      "pulseaudio",
      "clock",
    ],
    "pulseaudio": {
      "format": "{volume}% {format_source}",
      "format-source": "ğŸ™ï¸ğŸ¶",
      "format-source-muted": "ğŸ™ï¸ğŸš«",
    },
    "sway/mode": {
      "format": "<span style=\"italic\">{}</span>",
    },
    "tray": {
      "spacing": 10,
    },
    "clock": {
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format": "{:%I:%M %p}",
      "format-alt": "{:%Y-%m-%d %I:%M:%S %p}",
    },
    "wireplember": {
      "format": "{icon} {volume}% {format_source}",
      "format-muted": "ïš©  {format_source}",
    },
    "custom/keyboardlayout": {
      "interval": 1,
      "exec": "$HOME/.config/waybar/sway/scripts/get_layout.sh",
    },
    "custom/music": {
      "interval": 5,
      "exec": "playerctl metadata --format '{{status}}|{{artist}}|{{title}}' | sed 's/&/and/g'",
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "start-activated": true,
      "format-icons": {
        "activated": "ï®",
        "deactivated": "ï°",
      },
      "tooltip": false,
    },
    "custom/privacy": {
      "exec": "$HOME/.config/waybar/sway/scripts/privacy_monitor.sh",
      "return-type": "json",
      "interval": 2,
      "format": "{}",
      "tooltip": true,
    },
  },
]
