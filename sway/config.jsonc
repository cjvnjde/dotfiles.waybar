[
  {
    "position": "top",
    "output": "DP-1",
    "modules-left": ["sway/workspaces", "sway/mode", "sway/scratchpad"],
    "modules-center": ["sway/window"],
    "modules-right": [
      "custom/music",
      "idle_inhibitor",
      "custom/keyboardlayout",
      "tray",
      "custom/ups",
      "pulseaudio",
      "clock",
    ],
    "pulseaudio": {
      "format": "{volume}% {format_source}",
      "format-source": "üéôÔ∏èüé∂",
      "format-source-muted": "üéôÔ∏èüö´",
    },
    "sway/mode": {
      "format": "<span style=\"italic\">{}</span>",
    },
    "tray": {
      "spacing": 10,
    },
    "clock": {
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format": "{:%I:%M %p}",
      "format-alt": "{:%Y-%m-%d %I:%M:%S %p}",
    },
    "wireplember": {
      "format": "{icon} {volume}% {format_source}",
      "format-muted": "Ôö©  {format_source}",
    },
    "custom/ups": {
      "exec": "$HOME/.config/waybar/scripts/ups_status.sh",
      "interval": 10,
    },
    "custom/keyboardlayout": {
      "interval": 0.2,
      "exec": "$HOME/.config/waybar/sway/scripts/get_layout.sh",
    },
    "custom/music": {
      "interval": 5,
      "exec": "playerctl metadata --format '{{status}}|{{artist}}|{{title}}' | sed 's/&/and/g'",
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞",
      },
      "tooltip": false,
    },
  },
  {
    "output": "HDMI-A-1",
    "modules-left": [
      "sway/workspaces",
      "sway/mode",
      "sway/scratchpad",
      "custom/media",
    ],
    "modules-center": ["sway/window"],
    "modules-right": ["clock"],
    "clock": {
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format": "{:%I:%M %p}",
      "format-alt": "{:%Y-%m-%d %I:%M:%S %p}",
    },
  },
]
